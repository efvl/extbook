<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.4.xsd">

    <changeSet id="exb-create-word-table" author="evv">
        <createTable tableName="word">
            <column name="id" type="UUID" defaultValueComputed="gen_random_uuid()">
                <constraints primaryKey="true"/>
            </column>
            <column name="book_id" type="UUID">
                <constraints nullable="false"/>
            </column>
            <column name="page_num" type="int8"/>
            <column name="line_num" type="int8"/>
            <column name="word_num" type="int8"/>
            <column name="txt_content" type="varchar(128)"/>
            <column name="status" type="varchar(20)" defaultValue="DRAFT">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>